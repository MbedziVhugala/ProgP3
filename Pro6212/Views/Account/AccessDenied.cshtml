@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h4><i class="fas fa-lock"></i> Access Denied</h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-lock fa-5x text-warning mb-3"></i>
                    <h2 class="text-warning">Access Restricted</h2>
                    <p class="lead">You don't have permission to access this page.</p>
                </div>

                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Why am I seeing this?</h6>
                    <p class="mb-0">
                        This page requires specific permissions or user role that your account doesn't have.
                        If you believe this is an error, please contact your system administrator.
                    </p>
                </div>

                <div class="mt-4">
                    <h6>Your Current Role: <span class="badge bg-secondary">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span></h6>
                    <p class="text-muted small">Required roles for this page may include: Coordinator, Manager, or Administrator</p>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary me-md-2">
                        <i class="fas fa-tachometer-alt"></i> Go to Dashboard
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary me-md-2">
                        <i class="fas fa-home"></i> Home Page
                    </a>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt"></i> Switch Account
                        </button>
                    </form>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted small">
                        Need different access? Contact your administrator at
                        <a href="mailto:admin@iie.ac.za">admin@iie.ac.za</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>